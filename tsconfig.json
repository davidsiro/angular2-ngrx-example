{
    "compilerOptions": {
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "declaration": true
    },
    "awesomeTypescriptLoaderOptions": {
        "useWebpackText": true // Allows other loaders to be chained to awesome-typescript-loader.
    },
    "exclude": [
        "node_modules"
    ]
}
